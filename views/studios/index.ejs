<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Studios</title>
</head>
<body>
    <h1>Search Studios</h1>
    <form action="/studios" method="GET">
        <label>Name</label>
        <input type="text" name="name" value="<%= searchOptions.name%>">
        <button type="submit">Search</button>
    </form>
    <br>
    <% studios.forEach(studio => { %>
        <div><%= studio.name %></div>
        <a href="/studios/<%= studio.id %>">View</a>
        <a href="/studios/<%= studio.id %>/edit">Edit</a>
        <%- include('../partials/delete', { url: `/studios/${studio.id}`}) %>
      <% }) %>
</body>
</html>